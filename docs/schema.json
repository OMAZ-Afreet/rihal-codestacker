              "type": "number"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "dpi": {
                    "type": "number"
                  },
                  "format": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "dpi": 110,
                "format": "png"
              }
            },
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "dpi": {
                    "type": "number"
                  },
                  "format": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "dpi": 110,
                "format": "png"
              }
            }
          }
        },

        "responses": {
          "200": {
            "description": "",
            "content": {
              "image/png": {}
            }
          },

          "404": {
            "description": "",
            "content": {
              "application/json": {
                "examples": {
                  "error1": {
                    "summary": "",
                    "value": { "error": "pdf file with ID:7 NOT FOUND" }
                  },

                  "error2": {
                    "summary": "",
                    "value": {
                      "error": "page 5 not in pdf: name.pdf | Possible Pages: 1-3"
                    }
                  }
                }
