                    "c",
                    "ic",
                    "e",
                    "ie",
                    "sw",
                    "isw",
                    "ew",
                    "iew",
                    "ph",
                    "eng",
                    "def"
                  ]
                }
              }
            }
          }
        }
      }
    },

    "/search/count-word/{id}/{word}/": {
      "get": {
        "operationId": "15",
        "tags": ["Search"],
        "summary": "Occurrence of a word",
        "description": "Use this endpoint to get the total number of times the word is found, in addition to all the sentences the word is found in.",
        "parameters": [
          {
            "in": "path",
            "required": true,
            "name": "id",
            "schema": {
              "type": "number"
            }
          },
          {
            "in": "path",
            "required": true,
            "name": "word",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "example": {
                  "pdf_ID": 12,
                  "word": "hello",
